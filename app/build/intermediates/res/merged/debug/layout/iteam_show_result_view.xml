<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="100"
        android:background="@color/lightGray2"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/lightBllue"
            >
            <ImageView
                android:id="@+id/IV_addToCompare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:layout_weight="20"
                android:padding="10dp"
                android:src="@drawable/add_compare"></ImageView>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/AddToBin"
            android:textSize="15dp"
            android:gravity="center"
            android:padding="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            ></TextView>


    </LinearLayout>
    <ImageView
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:id="@+id/IV_car"
        android:src="@mipmap/ic_launcher"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TV_carName"
        android:textColor="@color/gray_dark"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="CarName"
        android:textSize="20dp"

        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/price"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="40,0000"
            android:textSize="15dp"
            android:textColor="@color/colorPrimaryDark"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#eeeeee"
        android:orientation="horizontal"
        android:weightSum="90">

        <Button
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="30"
            android:background="@color/lightBllue"
            android:text="@string/insurance_offer"
            android:textColor="@color/white"
            android:textSize="13dp"
            android:textAllCaps="false"
            android:id="@+id/BTN_insurance_offer"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="30"
            android:background="@color/colorPrimaryDark"
            android:text="@string/installment_offer"
            android:textColor="@color/white"
            android:textSize="13dp"
            android:textAllCaps="false"
            android:id="@+id/BTN_installment_offer"
            ></Button>

        <Button
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="30"
            android:background="@color/lightBllue"
            android:text="@string/shading_offer"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:id="@+id/BTN_shading_offer"
            android:textSize="13dp">

        </Button>


    </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>