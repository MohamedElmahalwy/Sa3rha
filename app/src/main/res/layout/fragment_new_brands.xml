<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGray"
    android:orientation="vertical"
    android:weightSum="100">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/RV_newCars"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="84.5">
    </android.support.v7.widget.RecyclerView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5"
        android:background="@color/lightGray2"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="16.24"
        android:background="@color/white"
        android:orientation="vertical">

        <Button
            android:id="@+id/BTN_ShowServices"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:background="@color/lightBllue"
            android:text="@string/ShowServices"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </LinearLayout>


</LinearLayout>